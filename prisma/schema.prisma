generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgres"
  url               = env("DATABASE_URL")
  //shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id     Int      @id @unique @default(autoincrement())
  telegramId Int   @default(0) @unique
  name   String
  number String
  email String @default("kirill@mail.ru")
  adress String @default("Typical adress")
  spent  Int    @default(0)
  role   Role    @default(CUSTOMER)
  orders Order[]
}

model Dish {
  id          Int    @id @unique @default(autoincrement())
  price       Int
  type        Int
  description String
  name        String
  imageUrl    String  @default("https://img.delo-vcusa.ru/2019/09/pesochniy-pirog-s-yablokami.jpg") // заменить
  Order   Order? @relation(fields: [orderId], references: [id])
  orderId Int?
}

model Order {
  id          Int      @id @unique @default(autoincrement())
  price       Int
  pickup      Int
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [telegramId])
  userId      Int      
  statusOrder Status   @default(UNPAID)
  paymentType PaymentType @default(ONLINE)
  dishes      Dish[]
}

model Admin {
  id  Int   @id @unique @default(autoincrement())
  login   String
  password  String
}



enum Role {
  CUSTOMER
  ADMIN
  BANNED
}

enum PaymentType {
  ONLINE
  OFFLINE
}

enum Status {
  UNPAID
  NEW
  INWORK
  DELIVERY
  READY
  ENDED
}
